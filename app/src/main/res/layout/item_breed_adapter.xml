<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="8dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cLayoutBreedAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/ivBreedAdapter"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/dog"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tvNameBreedAdapter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/lato"
                tools:text="TextView"
                android:padding="8dp"
                android:textSize="20sp"
                android:textColor="@color/dark"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ivBreedAdapter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBreedAdapter"
                app:layout_constraintTop_toTopOf="@+id/ivBreedAdapter" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>